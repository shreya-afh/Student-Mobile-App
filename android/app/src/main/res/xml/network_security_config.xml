<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Allow backend server IP -->
        <domain includeSubdomains="true">192.168.29.88</domain>
    </domain-config>
    
    <!-- Allow Replit domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">replit.dev</domain>
        <domain includeSubdomains="true">replit.app</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- Base configuration for all other domains (HTTPS only) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
